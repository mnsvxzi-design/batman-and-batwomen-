<body>
  <div class="heart-bg"></div>
  <div class="container">
    <h1>Will you be my Valentine? ü¶á‚ù§Ô∏èüê±</h1>
    
    <img src="https://github.com/mnsvxzi-design/batman-and-batwomen-/blob/main/image.jpg?raw=true" alt="Batman & Catwoman" class="valentine-img">
    
    <div class="buttons">
      <button id="no">No</button>
      <button id="yes">Yes</button>
    </div>
    
    <div id="response" class="message"></div>
  </div>

  <script>
    const yesBtn = document.getElementById('yes');
    const noBtn = document.getElementById('no');
    const response = document.getElementById('response');

    let noClickCount = 0;
    const maxGrowth = 5;

    // No button just counts clicks (no movement)
    noBtn.addEventListener('click', () => {
      if (noClickCount < maxGrowth) {
        noClickCount++;
        const scale = 1 + (noClickCount * 0.4); // grows Yes up to ~3x
        yesBtn.style.transform = `scale(${scale})`;
        yesBtn.style.padding = `${15 + noClickCount*10}px ${45 + noClickCount*20}px`;
        yesBtn.style.fontSize = `${1.6 + noClickCount*0.4}em`;
      }

      response.textContent = "Come on... you know you want to say Yes üòèüñ§";
    });

    // Yes button shows messages
    yesBtn.addEventListener('click', () => {
      response.innerHTML = 
        "I love you so much, Catwoman! üêæ‚ù§Ô∏è<br>" +
        "I can't wait to spend the rest of my life loving you<br>" +
        "<strong>- from your lover for life, Batman ü¶á</strong>";
      
      noBtn.style.display = 'none';           // hide No after Yes
      yesBtn.style.animation = 'pulse 1.5s infinite';
      yesBtn.disabled = true;
      yesBtn.style.cursor = 'default';
    });
  </script>
</body>
